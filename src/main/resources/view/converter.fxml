<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.converter.controller.ConverterController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50" prefWidth="300" prefHeight="200">
        <Label text="Currency Converter" styleClass="header"/>

        <TextField fx:id="amountField" promptText="Amount"/>

        <HBox spacing="10">
            <ComboBox fx:id="fromCurrency"/>
            <ComboBox fx:id="toCurrency"/>
        </HBox>

        <Button text="Convert" onAction="#handleConvert"/>

        <Label fx:id="resultLabel" text="Result will appear here"/>
    </VBox>
</AnchorPane>
